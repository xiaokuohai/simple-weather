<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <TextView
        android:id="@+id/item_hourly_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x时"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/item_hourly_tv_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="晴"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/item_hourly_tv_date"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/item_hourly_tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9℃"
        android:textSize="16sp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:id="@+id/item_hourly_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:src="@mipmap/icon_add"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_below="@id/item_hourly_tv_date"
        android:layout_marginTop="5dp"/>
</RelativeLayout>